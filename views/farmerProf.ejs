            <h1 style="margin-top: 60px">Welcome <%=farmer.username.username%></h1>

 <div class="ui main text container segment">
        <div class="ui huge header">Items Site</div>
        <div class="ui top attached ">
                <div class="ui divided items">
                    <% items.forEach(function(item){ %>
                    <div class="item">
                         <div class="image ui medium rounded" style="margin-bottom: 25px; width:50%; margin-left: 25%">
                         <img src="<%= item.image%>">
                         </div>
                    </div>
                    <div class="content" style="margin-bottom: 25px">
                     <a style="margin-left: 45%" class="ui header" href="<%=farmer.username.id%>/items/<%= item._id%>" > <%= item.name %>
                     </a>
                    </div> 
           <div class="description" style="margin-bottom: 25px;margin-left: 35%">
            <p  style="font-weight: 2.5em">Description: <%= item.content %> </p>
            <p style="font-weight: 2.5em">Type: <%= item.type %></p>
            <p style="font-weight: 2.5em">Name: <%= item.author %></p>
            <p style="font-weight: 2.5em">Telephone: <%= item.phone %></p>
            <p style="font-weight: 2.5em">Cost: Rs. <%= item.cost %></p>
          
        </div>    
        <div class="extra" style="margin-bottom: 25px;margin-left: 35%">
             <a class="ui button blue basic" href="/<%=farmer.username.id%>/items/<%= item._id%>/edit">Edit Post</a>
        <form action="/<%=farmer.username.id%>/items/<%=item._id%>?_method=DELETE" method="POST" style="display: inline">
        <input type="submit" class="ui button red basic" value="Delete">
        </a></div>
        <%});%>
                
            </div>
        </div>
        
